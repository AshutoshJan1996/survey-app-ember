<div class="signForm">
    <h5 class="text-center">Register To Survey App</h5>
    <div class="card">
        <h5 class="card-header">Sign Up</h5>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label>First Name</label>
                    <Input class="form-control" @type='text' @value={{firstName}} />
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <Input class="form-control" @type='text' @value={{lastName}} />
                </div>
                <div class="form-group">
                    <label>User Name<span class="failed">*</span></label>
                    <Input class="form-control" @type='text' @value={{userName}} {{on "input" (fn this.validate 'uName'
                        )}} />
                    {{#if isUserName}}
                    <span class="failed">User Name is required</span>
                    {{/if}}
                </div>
                <div class="form-group">
                    <label class="form-check form-check-inline">
                        <Input class="form-check-input" @type="radio" {{on "click" (fn this.selectGender 'male' )}} />
                        <span class="form-check-label"> Male </span>
                    </label>
                    <label class="form-check form-check-inline">
                        <Input class="form-check-input" @type="radio" name="gender" {{on "click" (fn
                            this.selectGender 'female' )}} />
                        <span class="form-check-label"> Female</span>
                    </label>
                </div>
                <div class="form-group">
                    <label>Create password<span class="failed">*</span></label>
                    <Input class="form-control" @type='text' @value={{password}} {{on "input" (fn this.validate 'pass'
                        )}} />
                    {{#if isPassword}}
                    <span class="failed">Password is required</span>
                    {{/if}}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" {{on 'click' onClickSubmite}}> Register
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            have an account?<LinkTo @route="signin" class="button">Sign In</LinkTo>
        </div>
    </div>
</div>