    <div class="card" style="margin-top: 1rem;">
        <div class="card-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                        <label>Question:</label>
                    </div>
                    <div class="col-10">
                        <h6 class="capital">{{@ques.question}}</h6>
                    </div>
                    <div class="col-1">
                        <h6 class="removeItem" 
                        {{on "click" (fn @removeQuestion @ind)}}>X</h6>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                        <label>Type:</label>
                    </div>
                    <div class="col-11">
                        <h6 class="capital">{{@ques.type}}</h6>
                    </div>
                </div> 
             </div>
             {{#each @ques.opations as |opat|}}
              <div class="form-group">
                <div class="row">
                    <div class="col-1">
                        <label>Option:</label>
                    </div>
                    <div class="col-11">
                        <h6 class="capital">{{opat}}</h6>
                    </div>
                </div> 
              </div>
             {{/each}}
        </div>
    </div>